<div class="text-center">
<h1 class="h3 mt-5 mb-3 font-weight-normal"><%= t("devise.sessions.new.title")%></h1>
<%=form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row justify-content-center">
    <%= f.email_field :email, {autofocus: true, autocomplete: "email",
                               :class=>"col-3 form-control",
                               :placeholder=>t("devise.sessions.new.email")} %>
  </div>
  <div class="row justify-content-center">
    <%= f.password_field :password, {autocomplete: "current-password",
                                     :class=>"mb-3 col-3 form-control",
                                     :placeholder => t("devise.sessions.new.password")}%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="container">
      <%= f.check_box :remember_me, :class=>"mb-3" %>
      <%= f.label :remember_me%>
    </div>
  <% end %>

  <div >
    <%= f.submit t("devise.sessions.new.submit"),{:class => "mb-2 btn btn-primary"} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</html>
<div class="card-deck mb-3 text-center">
  <%= @ads.find_each do |ad| %>
    <div class="card mb-4 shadow-sm">
      <%= link_to t(".edit"), ad_path(ad) %>
      <%= link_to t(".destroy"), ad_path(ad),
                  {style: 'color: red', method: :delete,
                   data: {confirm: t("confirmation")}} %>
      <%= render "ad", ad: ad %>
    </div>
  <% end %>
</div>
<%= will_paginate @ads %>
<h2><%= t(".title") %></h2>
<%= form_for :profile, url: profile_path, method: :patch do |f| %>
  <% if @profile.errors.any? %>
    <% @profile.errors.full_messages.each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  <% else %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t(".first_name") %></label>
      <%= f.text_field :first_name, {autocomplete: "first_name",
                                     :class => "col-3 mb-2 form-control"} %>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t(".second_name") %></label>
      <%= f.text_field :second_name, {autocomplete: "second_name",
                                      :class => "col-3 mb-2 form-control"} %>
    </div>
    <hr>
    <label class="col-sm-2 col-form-label"><%= t(".avatar") %></label>
    <p class="custom-file">
      <%= f.file_field :avatar, {:class => "custom-file-label "} %>
    </p>
    <%= f.submit t(".submit"), {:class => "mt-2 mb-2 btn btn-success"} %>
  <% end %>
<% end %>

